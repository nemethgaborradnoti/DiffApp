<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fonts="clr-namespace:Fonts">

	<Color x:Key="ColorPrimary">#24292e</Color>
	<Color x:Key="ColorBackground">#FFFFFF</Color>
	<Color x:Key="ColorSurface">#F6F8FA</Color>
	<Color x:Key="ColorBorder">#D1D5DA</Color>
	<Color x:Key="ColorLineNumber">#b0b0b0</Color>
	<Color x:Key="ColorAccent">#0366d6</Color>
	<Color x:Key="ColorTextWhite">#FFFFFF</Color>

	<SolidColorBrush x:Key="BrushPrimary" Color="{StaticResource ColorPrimary}"/>
	<SolidColorBrush x:Key="BrushBackground" Color="{StaticResource ColorBackground}"/>
	<SolidColorBrush x:Key="BrushSurface" Color="{StaticResource ColorSurface}"/>
	<SolidColorBrush x:Key="BrushBorder" Color="{StaticResource ColorBorder}"/>
	<SolidColorBrush x:Key="BrushLineNumber" Color="{StaticResource ColorLineNumber}"/>
	<SolidColorBrush x:Key="BrushAccent" Color="{StaticResource ColorAccent}"/>
	<SolidColorBrush x:Key="BrushTextWhite" Color="{StaticResource ColorTextWhite}"/>

	<!-- Diff Colors -->
	<SolidColorBrush x:Key="DiffBackgroundAdded" Color="#e6ffed" />
	<SolidColorBrush x:Key="DiffHighlightAdded" Color="#acf2bd" />
	<SolidColorBrush x:Key="DiffBackgroundRemoved" Color="#ffeef0" />
	<SolidColorBrush x:Key="DiffHighlightRemoved" Color="#fdb8c0" />
	<SolidColorBrush x:Key="DiffBackgroundModified" Color="#fffbdd" />
	<SolidColorBrush x:Key="DiffBackgroundImaginary" Color="#f0f0f0" />
	<SolidColorBrush x:Key="DiffBackgroundUnchanged" Color="Transparent" />
	<SolidColorBrush x:Key="DiffHighlightUnchanged" Color="Transparent" />

	<SolidColorBrush x:Key="BrushSelectionBorder" Color="#0366d6" />

	<Thickness x:Key="ThicknessStandard">10</Thickness>
	<Thickness x:Key="ThicknessSmall">5</Thickness>
	<CornerRadius x:Key="CornerRadiusStandard">4</CornerRadius>

	<FontFamily x:Key="AppFont">pack://application:,,,/Resources/Fonts/#Inter</FontFamily>
	<FontFamily x:Key="MaterialIconsFont">pack://application:,,,/Resources/Fonts/MaterialIcons-Regular.ttf#Material Icons</FontFamily>

	<Style TargetType="TextBlock">
		<Setter Property="Foreground" Value="{StaticResource BrushPrimary}"/>
	</Style>

	<!-- Icon Style using the Resource Key -->
	<Style x:Key="IconStyle" TargetType="TextBlock">
		<Setter Property="FontFamily" Value="{StaticResource MaterialIconsFont}" />
		<Setter Property="FontSize" Value="20" />
		<Setter Property="VerticalAlignment" Value="Center" />
		<Setter Property="HorizontalAlignment" Value="Center" />
		<Setter Property="Foreground" Value="{StaticResource BrushPrimary}" />
		<Setter Property="TextAlignment" Value="Center" />
	</Style>

	<!-- Icon Button Style -->
	<Style x:Key="IconButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="BorderThickness" Value="0" />
		<Setter Property="Padding" Value="10" />
		<Setter Property="MinHeight" Value="36" />
		<Setter Property="MinWidth" Value="36" />
		<Setter Property="HorizontalContentAlignment" Value="Center" />
		<Setter Property="VerticalContentAlignment" Value="Center" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="Button">
					<Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource CornerRadiusStandard}"
                            Padding="{TemplateBinding Padding}">
						<ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
					</Border>
					<ControlTemplate.Triggers>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter Property="Background" Value="#e1e4e8"/>
						</Trigger>
						<Trigger Property="IsPressed" Value="True">
							<Setter Property="Background" Value="#d1d5da"/>
						</Trigger>
						<Trigger Property="IsEnabled" Value="False">
							<Setter Property="Opacity" Value="0.5"/>
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>