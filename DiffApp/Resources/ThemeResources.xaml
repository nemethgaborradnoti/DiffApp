<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fonts="clr-namespace:Fonts">

	<Color x:Key="ColorPrimary">#24292e</Color>
	<Color x:Key="ColorBackground">#FFFFFF</Color>
	<Color x:Key="ColorSurface">#F6F8FA</Color>
	<Color x:Key="ColorBorder">#D1D5DA</Color>
	<Color x:Key="ColorLineNumber">#b0b0b0</Color>
	<Color x:Key="ColorAccent">#0366d6</Color>
	<Color x:Key="ColorTextWhite">#FFFFFF</Color>

	<SolidColorBrush x:Key="BrushPrimary" Color="{StaticResource ColorPrimary}"/>
	<SolidColorBrush x:Key="BrushBackground" Color="{StaticResource ColorBackground}"/>
	<SolidColorBrush x:Key="BrushSurface" Color="{StaticResource ColorSurface}"/>
	<SolidColorBrush x:Key="BrushBorder" Color="{StaticResource ColorBorder}"/>
	<SolidColorBrush x:Key="BrushLineNumber" Color="{StaticResource ColorLineNumber}"/>
	<SolidColorBrush x:Key="BrushAccent" Color="{StaticResource ColorAccent}"/>
	<SolidColorBrush x:Key="BrushTextWhite" Color="{StaticResource ColorTextWhite}"/>

	<!-- Diff Colors -->
	<SolidColorBrush x:Key="DiffBackgroundAdded" Color="#e6ffed" />
	<SolidColorBrush x:Key="DiffHighlightAdded" Color="#acf2bd" />
	<SolidColorBrush x:Key="DiffBackgroundRemoved" Color="#ffeef0" />
	<SolidColorBrush x:Key="DiffHighlightRemoved" Color="#fdb8c0" />
	<SolidColorBrush x:Key="DiffBackgroundModified" Color="#fffbdd" />
	<SolidColorBrush x:Key="DiffBackgroundImaginary" Color="#f0f0f0" />
	<SolidColorBrush x:Key="DiffBackgroundUnchanged" Color="Transparent" />
	<SolidColorBrush x:Key="DiffHighlightUnchanged" Color="Transparent" />

	<SolidColorBrush x:Key="BrushSelectionBorder" Color="#0366d6" />

	<Thickness x:Key="ThicknessStandard">10</Thickness>
	<Thickness x:Key="ThicknessSmall">5</Thickness>
	<CornerRadius x:Key="CornerRadiusStandard">4</CornerRadius>

	<FontFamily x:Key="AppFont">pack://application:,,,/DiffApp;component/Resources/Fonts/#Inter</FontFamily>
	<FontFamily x:Key="CodeFont">Consolas, Courier New, Monospace</FontFamily>
	<FontFamily x:Key="MaterialIconsFont">pack://application:,,,/DiffApp;component/Resources/Fonts/MaterialIcons-Regular.ttf#Material Icons</FontFamily>

</ResourceDictionary>