<Window x:Class="DiffApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:DiffApp.ViewModels"
        xmlns:views="clr-namespace:DiffApp.Views"
        xmlns:converters="clr-namespace:DiffApp.Converters"
        xmlns:models="clr-namespace:DiffApp.Models"
        mc:Ignorable="d"
        Title="DiffApp" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <viewModels:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="160" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="#555555" BorderThickness="1" Margin="0,0,0,5">
            <Grid>
                <TextBlock Text="Press 'Find Difference' to see the result."
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="Gray">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DiffViewModel}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <views:DiffView DataContext="{Binding DiffViewModel}"
                                Visibility="{Binding DiffViewModel, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0"
                     Text="{Binding LeftText, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     TextWrapping="NoWrap"
                     Margin="0,5,0,0"
                     FontFamily="Consolas"/>

            <!-- Swap Button in the Middle -->
            <Button Grid.Column="1" 
                    Content="&#x21C4;" 
                    Command="{Binding SwapTextsCommand}"
                    ToolTip="Swap Sides"
                    Margin="5,5,5,0" 
                    VerticalAlignment="Top"
                    FontWeight="Bold"
                    FontSize="16"/>

            <TextBox Grid.Column="2"
                     Text="{Binding RightText, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     TextWrapping="NoWrap"
                     Margin="0,5,0,0"
                     FontFamily="Consolas"/>
        </Grid>

        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Find Difference" Command="{Binding FindDifferenceCommand}" />

            <GroupBox Header="Settings" Margin="20,0,0,0" Padding="5">
                <StackPanel Orientation="Horizontal">
                    <CheckBox Content="Ignore Whitespace" IsChecked="{Binding IgnoreWhitespace}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <CheckBox Content="Word Wrap" IsChecked="{Binding IsWordWrapEnabled}" VerticalAlignment="Center" Margin="10,0,10,0"/>

                    <Label Content="Precision:" VerticalAlignment="Center"/>
                    <RadioButton Content="Word" IsChecked="{Binding Precision, Converter={x:Static converters:EnumMatchToBooleanConverter.Instance}, ConverterParameter={x:Static models:DiffPrecision.Word}}" 
                                 GroupName="PrecisionGroup" VerticalAlignment="Center" Margin="5,0"/>
                    <RadioButton Content="Character" IsChecked="{Binding Precision, Converter={x:Static converters:EnumMatchToBooleanConverter.Instance}, ConverterParameter={x:Static models:DiffPrecision.Character}}" 
                                 GroupName="PrecisionGroup" VerticalAlignment="Center" Margin="5,0"/>
                </StackPanel>
            </GroupBox>

            <ToggleButton Content="Unified Diff" IsChecked="{Binding IsUnifiedMode}" Margin="20,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>