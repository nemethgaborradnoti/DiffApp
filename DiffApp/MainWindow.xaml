<Window x:Class="DiffApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:DiffApp.Converters"
        xmlns:models="clr-namespace:DiffApp.Models"
        xmlns:fonts="clr-namespace:Fonts"
        mc:Ignorable="d"
        Title="DiffApp" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:EnumMatchToBooleanConverter x:Key="EnumMatchToBooleanConverter" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar / Settings Panel -->
        <Border Grid.Column="0"
                Background="{StaticResource BrushSurface}"
                BorderBrush="{StaticResource BrushBorder}"
                BorderThickness="0,0,1,0"
                Padding="15"
                Width="280"
                Visibility="{Binding IsSettingsPanelOpen, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel>
                <Grid Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{x:Static fonts:MaterialIcons.tune}" Style="{StaticResource IconStyle}" Margin="0,0,10,0"/>
                        <TextBlock Text="Settings" Style="{StaticResource HeaderTextStyle}"/>
                    </StackPanel>

                    <Button Style="{StaticResource IconButtonStyle}"
                            Command="{Binding ToggleSettingsCommand}"
                            HorizontalAlignment="Right"
                            ToolTip="Close Settings">
                        <TextBlock Text="{x:Static fonts:MaterialIcons.close}" Style="{StaticResource IconStyle}"/>
                    </Button>
                </Grid>

                <TextBlock Text="Appearance" Style="{StaticResource SectionHeaderStyle}"/>
                <CheckBox Content="Word Wrap" 
                          IsChecked="{Binding InputViewModel.IsWordWrapEnabled}" 
                          Style="{StaticResource ToggleSwitchStyle}"
                          Margin="0,0,0,20"/>

                <TextBlock Text="Layout" Style="{StaticResource SectionHeaderStyle}"/>
                <StackPanel Margin="0,0,0,20">
                    <RadioButton Content="Split" IsChecked="{Binding InputViewModel.ViewMode, Converter={StaticResource EnumMatchToBooleanConverter}, ConverterParameter={x:Static models:ViewMode.Split}}"
                                 GroupName="ViewModeGroup" Margin="0,0,0,8"/>
                    <RadioButton Content="Unified" IsChecked="{Binding InputViewModel.ViewMode, Converter={StaticResource EnumMatchToBooleanConverter}, ConverterParameter={x:Static models:ViewMode.Unified}}"
                                 GroupName="ViewModeGroup" Margin="0,0,0,8"/>
                </StackPanel>

                <TextBlock Text="Comparison" Style="{StaticResource SectionHeaderStyle}"/>
                <CheckBox Content="Ignore Whitespace" 
                          IsChecked="{Binding InputViewModel.IgnoreWhitespace}" 
                          Style="{StaticResource ToggleSwitchStyle}"
                          Margin="0,0,0,20"/>

                <TextBlock Text="Highlight Precision" Style="{StaticResource SectionHeaderStyle}"/>
                <StackPanel>
                    <RadioButton Content="Word Level" IsChecked="{Binding InputViewModel.Precision, Converter={StaticResource EnumMatchToBooleanConverter}, ConverterParameter={x:Static models:PrecisionLevel.Word}}"
                                 GroupName="PrecisionGroup" Margin="0,0,0,8"/>
                    <RadioButton Content="Character Level" IsChecked="{Binding InputViewModel.Precision, Converter={StaticResource EnumMatchToBooleanConverter}, ConverterParameter={x:Static models:PrecisionLevel.Character}}"
                                 GroupName="PrecisionGroup" Margin="0,0,0,8"/>
                    <TextBlock Text="Switching precision only affects highlighting, not calculation."
                               FontSize="11" Foreground="{StaticResource GrayTextBrush}" TextWrapping="Wrap" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Reset Defaults Button -->
                <Button Content="Reset to defaults" 
                         Command="{Binding ResetDefaultsCommand}"
                         Style="{StaticResource SecondaryButton}" 
                         Margin="0,20,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Row 1: Comparison View -->
                <RowDefinition>
                    <RowDefinition.Style>
                        <Style TargetType="RowDefinition">
                            <Setter Property="Height" Value="*" />
                            <Style.Triggers>
                                <!-- Hide Comparison Row if ComparisonViewModel is null -->
                                <DataTrigger Binding="{Binding ComparisonViewModel}" Value="{x:Null}">
                                    <Setter Property="Height" Value="0" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </RowDefinition.Style>
                </RowDefinition>

                <RowDefinition Height="Auto" />

                <!-- Row 3: Input Panel -->
                <RowDefinition>
                    <RowDefinition.Style>
                        <Style TargetType="RowDefinition">
                            <Setter Property="Height" Value="*" />
                            <Style.Triggers>
                                <!-- Hide Input Row if IsInputPanelOpen is false -->
                                <DataTrigger Binding="{Binding IsInputPanelOpen}" Value="False">
                                    <Setter Property="Height" Value="0" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </RowDefinition.Style>
                </RowDefinition>

                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Top Toolbar for Toggle -->
            <Border Grid.Row="0" Background="{StaticResource BrushSurface}" BorderBrush="{StaticResource BrushBorder}" BorderThickness="0,0,0,1" Padding="10">
                <StackPanel Orientation="Horizontal">
                    <Button Style="{StaticResource IconButtonStyle}"
                            Command="{Binding ToggleSettingsCommand}"
                            Visibility="{Binding IsSettingsPanelOpen, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                            ToolTip="Open Settings"
                            Padding="10,6">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{x:Static fonts:MaterialIcons.tune}" Style="{StaticResource IconStyle}" Margin="0,0,10,0" FontSize="20"/>
                            <TextBlock Text="Settings" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Comparison Result -->
            <ContentControl Grid.Row="1" Content="{Binding ComparisonViewModel}" />

            <!-- Grid Splitter (Visible when both Input and Comparison are visible) -->
            <GridSplitter Grid.Row="2"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Height="5"
                          ResizeBehavior="PreviousAndNext">
                <GridSplitter.Style>
                    <Style TargetType="GridSplitter">
                        <Setter Property="Visibility" Value="Visible" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsInputPanelOpen}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ComparisonViewModel}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </GridSplitter.Style>
            </GridSplitter>

            <!-- Input Panel (Visible when Input is Open) -->
            <ContentControl Grid.Row="3"
                            Content="{Binding InputViewModel}"
                            Margin="10"
                            Visibility="{Binding IsInputPanelOpen, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <!-- Collapsed Input Strip (Visible when Input is Closed) -->
            <Button Grid.Row="4"
                    Command="{Binding ToggleInputPanelCommand}"
                    Visibility="{Binding IsInputPanelOpen, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                    Style="{StaticResource PrimaryButton}"
                    Height="40"
                    Margin="0"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Cursor="Hand"
                    BorderThickness="0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{x:Static fonts:MaterialIcons.edit}" Style="{StaticResource IconStyle}" Margin="0,0,8,0"/>
                    <TextBlock Text="EDIT INPUTS" FontWeight="Bold"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>