<Application x:Class="DiffApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:DiffApp.ViewModels"
             xmlns:views="clr-namespace:DiffApp.Views"
             xmlns:converters="clr-namespace:DiffApp.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ThemeResources.xaml"/>
                <ResourceDictionary Source="/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

            <DataTemplate DataType="{x:Type viewModels:InputViewModel}">
                <views:InputView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:ComparisonViewModel}">
                <views:ComparisonView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>