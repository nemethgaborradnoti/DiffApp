<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Themes/Styles/Colors.xaml" />
        <ResourceDictionary Source="/Themes/Styles/Text.xaml" />
        <ResourceDictionary Source="/Themes/Styles/Buttons.xaml" />
        <ResourceDictionary Source="/Themes/Styles/Inputs.xaml" />
        <ResourceDictionary Source="/Themes/Styles/DataDisplay.xaml" />
        <ResourceDictionary Source="/Themes/Styles/Layout.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <FontFamily x:Key="AppFont">pack://application:,,,/DiffApp;component/Resources/Fonts/#Inter 24pt, pack://application:,,,/DiffApp;component/Resources/Fonts/#Inter</FontFamily>

    <FontFamily x:Key="MaterialIconsFont">pack://application:,,,/DiffApp;component/Resources/Fonts/MaterialIcons-Regular.ttf#Material Icons</FontFamily>

    <Style TargetType="{x:Type Window}">
        <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Background" Value="{StaticResource BrushBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource BrushPrimary}"/>
    </Style>

</ResourceDictionary>