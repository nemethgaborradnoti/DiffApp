<UserControl x:Class="DiffApp.Views.DiffView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:models="clr-namespace:DiffApp.Models"
             xmlns:converters="clr-namespace:DiffApp.Converters"
             xmlns:diffBuilder="clr-namespace:DiffPlex.DiffBuilder.Model;assembly=DiffPlex"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800"
             FontFamily="Consolas"
             Background="White">
    <UserControl.Resources>
        <converters:ChangeTypeToBrushConverter x:Key="ChangeTypeToBrushConverter" />
        <converters:DiffPieceKindToBrushConverter x:Key="DiffPieceKindToBrushConverter" />

        <DataTemplate x:Key="LineContentTemplate">
            <ItemsControl ItemsSource="{Binding Pieces}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:DiffPiece}">
                        <TextBlock Text="{Binding Text}" 
                                   Background="{Binding Kind, Converter={StaticResource DiffPieceKindToBrushConverter}}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </DataTemplate>

        <DataTemplate x:Key="SideBySideTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ScrollViewer Grid.Column="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding DiffResult.Hunks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:DiffHunk}">
                                <ItemsControl ItemsSource="{Binding OldLines}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type models:DiffLine}">
                                            <Grid MinHeight="18">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.ColumnSpan="2" Background="{Binding Kind, Converter={StaticResource ChangeTypeToBrushConverter}}"/>
                                                <TextBlock Text="{Binding LineNumber}" 
                                                           Foreground="{StaticResource LineNumberForeground}" 
                                                           TextAlignment="Right" 
                                                           Padding="0,0,10,0" />
                                                <ContentPresenter Grid.Column="1"
                                                                  Content="{Binding}"
                                                                  ContentTemplate="{StaticResource LineContentTemplate}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <Border Grid.Column="1" Background="#e1e4e8"/>

                <ScrollViewer Grid.Column="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding DiffResult.Hunks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:DiffHunk}">
                                <ItemsControl ItemsSource="{Binding NewLines}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type models:DiffLine}">
                                            <Grid MinHeight="18">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.ColumnSpan="2" Background="{Binding Kind, Converter={StaticResource ChangeTypeToBrushConverter}}"/>
                                                <TextBlock Text="{Binding LineNumber}"
                                                           Foreground="{StaticResource LineNumberForeground}" 
                                                           TextAlignment="Right" 
                                                           Padding="0,0,10,0" />
                                                <ContentPresenter Grid.Column="1"
                                                                  Content="{Binding}"
                                                                  ContentTemplate="{StaticResource LineContentTemplate}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="UnifiedTemplate">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding UnifiedLines}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:DiffLine}">
                            <Grid MinHeight="18">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Border Grid.ColumnSpan="3" Background="{Binding Kind, Converter={StaticResource ChangeTypeToBrushConverter}}"/>

                                <TextBlock Text="{Binding LineNumber}" 
                                           Foreground="{StaticResource LineNumberForeground}" 
                                           TextAlignment="Right" 
                                           Padding="0,0,10,0" />

                                <TextBlock Grid.Column="1" Foreground="{StaticResource LineNumberForeground}" Padding="5,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value=" "/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Kind}" Value="Inserted">
                                                    <Setter Property="Text" Value="+"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Kind}" Value="Deleted">
                                                    <Setter Property="Text" Value="-"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <ContentPresenter Grid.Column="2"
                                                  Content="{Binding}"
                                                  ContentTemplate="{StaticResource LineContentTemplate}"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </DataTemplate>
    </UserControl.Resources>

    <ContentControl Content="{Binding}">
        <ContentControl.Style>
            <Style TargetType="ContentControl">
                <Setter Property="ContentTemplate" Value="{StaticResource SideBySideTemplate}" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding DataContext.IsUnifiedMode, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                        <Setter Property="ContentTemplate" Value="{StaticResource UnifiedTemplate}" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ContentControl.Style>
    </ContentControl>
</UserControl>

