<UserControl x:Class="DiffApp.Views.DiffView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:models="clr-namespace:DiffApp.Models"
             xmlns:converters="clr-namespace:DiffApp.Converters"
             xmlns:helpers="clr-namespace:DiffApp.Helpers"
             xmlns:diffBuilder="clr-namespace:DiffPlex.DiffBuilder.Model;assembly=DiffPlex"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="800"
             FontFamily="Consolas"
             Background="White">
    <UserControl.Resources>
        <converters:ChangeTypeToBrushConverter x:Key="ChangeTypeToBrushConverter" />
        <converters:MergeParamsConverter x:Key="MergeParamsConverter" />
        <converters:BoolToTextWrappingConverter x:Key="BoolToTextWrappingConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <!-- Modified LineContentTemplate to use TextBlockFormatter and support wrapping -->
        <DataTemplate x:Key="LineContentTemplate">
            <TextBlock helpers:TextBlockFormatter.Pieces="{Binding Pieces}"
                       TextWrapping="{Binding DataContext.IsWordWrapEnabled, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToTextWrappingConverter}}"
                       FontFamily="Consolas" />
        </DataTemplate>

        <DataTemplate x:Key="SideBySideTemplate">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <!-- Global Header -->
                    <RowDefinition Height="*" />
                    <!-- Content -->
                </Grid.RowDefinitions>

                <!-- Global Header with Copy Buttons -->
                <Grid Grid.Row="0" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Left Header -->
                    <Border Grid.Column="0" Background="#f6f8fa" BorderBrush="#d1d5da" BorderThickness="0,0,0,1" Padding="5">
                        <Grid>
                            <TextBlock Text="Original" FontWeight="Bold" VerticalAlignment="Center" Foreground="#586069"/>
                            <Button Content="Copy" HorizontalAlignment="Right" Padding="8,2" FontSize="11"
                                    Command="{Binding DataContext.CopyTextCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{x:Static models:DiffSide.Old}"/>
                        </Grid>
                    </Border>

                    <!-- Gutter Header -->
                    <Border Grid.Column="1" Background="#f6f8fa" BorderBrush="#d1d5da" BorderThickness="0,0,0,1"/>

                    <!-- Right Header -->
                    <Border Grid.Column="2" Background="#f6f8fa" BorderBrush="#d1d5da" BorderThickness="0,0,0,1" Padding="5">
                        <Grid>
                            <TextBlock Text="Modified" FontWeight="Bold" VerticalAlignment="Center" Foreground="#586069"/>
                            <Button Content="Copy" HorizontalAlignment="Right" Padding="8,2" FontSize="11"
                                    Command="{Binding DataContext.CopyTextCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{x:Static models:DiffSide.New}"/>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Scrollable Content -->
                <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding DiffResult.Hunks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:DiffHunk}">
                                <Grid>
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Background" Value="Transparent" />
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F8F8F8" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="40" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Left Side (Old) Content -->
                                    <ItemsControl Grid.Column="0" ItemsSource="{Binding OldLines}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type models:DiffLine}">
                                                <Grid MinHeight="18">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="40" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.ColumnSpan="2" Background="{Binding Kind, Converter={StaticResource ChangeTypeToBrushConverter}}"/>
                                                    <TextBlock Text="{Binding LineNumber}"
                                                               Foreground="{StaticResource LineNumberForeground}"
                                                               TextAlignment="Right"
                                                               Padding="0,0,10,0" />
                                                    <ContentPresenter Grid.Column="1"
                                                                      Content="{Binding}"
                                                                      ContentTemplate="{StaticResource LineContentTemplate}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Gutter with Merge Actions -->
                                    <Border Grid.Column="1" BorderBrush="#e1e4e8" BorderThickness="1,0">
                                        <StackPanel VerticalAlignment="Center" 
                                                    Visibility="{Binding IsMergeable, Converter={StaticResource BooleanToVisibilityConverter}}">

                                            <Button Content=">>" 
                                                    ToolTip="Merge Left to Right"
                                                    Padding="2" Margin="2" FontSize="10" FontWeight="Bold"
                                                    Command="{Binding DataContext.MergeBlockCommand, RelativeSource={RelativeSource AncestorType=Window}}">
                                                <Button.CommandParameter>
                                                    <MultiBinding Converter="{StaticResource MergeParamsConverter}">
                                                        <Binding />
                                                        <!-- The DiffHunk -->
                                                        <Binding Source="{x:Static models:MergeDirection.LeftToRight}" />
                                                    </MultiBinding>
                                                </Button.CommandParameter>
                                            </Button>

                                            <Button Content="&lt;&lt;" 
                                                    ToolTip="Merge Right to Left"
                                                    Padding="2" Margin="2" FontSize="10" FontWeight="Bold"
                                                    Command="{Binding DataContext.MergeBlockCommand, RelativeSource={RelativeSource AncestorType=Window}}">
                                                <Button.CommandParameter>
                                                    <MultiBinding Converter="{StaticResource MergeParamsConverter}">
                                                        <Binding />
                                                        <!-- The DiffHunk -->
                                                        <Binding Source="{x:Static models:MergeDirection.RightToLeft}" />
                                                    </MultiBinding>
                                                </Button.CommandParameter>
                                            </Button>
                                        </StackPanel>
                                    </Border>

                                    <!-- Right Side (New) Content -->
                                    <ItemsControl Grid.Column="2" ItemsSource="{Binding NewLines}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type models:DiffLine}">
                                                <Grid MinHeight="18">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="40" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.ColumnSpan="2" Background="{Binding Kind, Converter={StaticResource ChangeTypeToBrushConverter}}"/>
                                                    <TextBlock Text="{Binding LineNumber}"
                                                               Foreground="{StaticResource LineNumberForeground}"
                                                               TextAlignment="Right"
                                                               Padding="0,0,10,0" />
                                                    <ContentPresenter Grid.Column="1"
                                                                      Content="{Binding}"
                                                                      ContentTemplate="{StaticResource LineContentTemplate}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="UnifiedTemplate">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <!-- Global Header -->
                    <RowDefinition Height="*" />
                    <!-- Content -->
                </Grid.RowDefinitions>

                <!-- Global Header with Copy Buttons -->
                <Grid Grid.Row="0" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#f6f8fa" BorderBrush="#d1d5da" BorderThickness="0,0,1,1" Padding="5">
                        <Grid>
                            <TextBlock Text="Original" FontWeight="Bold" VerticalAlignment="Center" Foreground="#586069"/>
                            <Button Content="Copy" HorizontalAlignment="Right" Padding="8,2" FontSize="11"
                                    Command="{Binding DataContext.CopyTextCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{x:Static models:DiffSide.Old}"/>
                        </Grid>
                    </Border>

                    <Border Grid.Column="1" Background="#f6f8fa" BorderBrush="#d1d5da" BorderThickness="0,0,0,1" Padding="5">
                        <Grid>
                            <TextBlock Text="Modified" FontWeight="Bold" VerticalAlignment="Center" Foreground="#586069"/>
                            <Button Content="Copy" HorizontalAlignment="Right" Padding="8,2" FontSize="11"
                                    Command="{Binding DataContext.CopyTextCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{x:Static models:DiffSide.New}"/>
                        </Grid>
                    </Border>
                </Grid>

                <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding UnifiedLines}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:DiffLine}">
                                <Grid MinHeight="18">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.ColumnSpan="3" Background="{Binding Kind, Converter={StaticResource ChangeTypeToBrushConverter}}"/>

                                    <TextBlock Text="{Binding LineNumber}"
                                               Foreground="{StaticResource LineNumberForeground}"
                                               TextAlignment="Right"
                                               Padding="0,0,10,0" />

                                    <TextBlock Grid.Column="1" Foreground="{StaticResource LineNumberForeground}" Padding="5,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value=" "/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Kind}" Value="Inserted">
                                                        <Setter Property="Text" Value="+"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Kind}" Value="Deleted">
                                                        <Setter Property="Text" Value="-"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <ContentPresenter Grid.Column="2"
                                                      Content="{Binding}"
                                                      ContentTemplate="{StaticResource LineContentTemplate}"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <ContentControl Content="{Binding}">
        <ContentControl.Style>
            <Style TargetType="ContentControl">
                <Setter Property="ContentTemplate" Value="{StaticResource SideBySideTemplate}" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding DataContext.IsUnifiedMode, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                        <Setter Property="ContentTemplate" Value="{StaticResource UnifiedTemplate}" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ContentControl.Style>
    </ContentControl>
</UserControl>