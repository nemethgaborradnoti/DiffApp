<UserControl x:Class="DiffApp.Views.DiffView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:models="clr-namespace:DiffApp.Models"
             xmlns:converters="clr-namespace:DiffApp.Converters"
             xmlns:diffBuilder="clr-namespace:DiffPlex.DiffBuilder.Model;assembly=DiffPlex"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="800"
             FontFamily="Consolas"
             Background="White">
    <UserControl.Resources>
        <converters:ChangeTypeToBrushConverter x:Key="ChangeTypeToBrushConverter" />
        <converters:DiffPieceKindToBrushConverter x:Key="DiffPieceKindToBrushConverter" />
        <converters:MergeParamsConverter x:Key="MergeParamsConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <DataTemplate x:Key="LineContentTemplate">
            <ItemsControl ItemsSource="{Binding Pieces}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:DiffPiece}">
                        <TextBlock Text="{Binding Text}"
                                   Background="{Binding Kind, Converter={StaticResource DiffPieceKindToBrushConverter}}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </DataTemplate>

        <DataTemplate x:Key="SideBySideTemplate">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding DiffResult.Hunks}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:DiffHunk}">
                            <Grid>
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F8F8F8" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="40" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!-- Left Side (Old) -->
                                <ItemsControl Grid.Column="0" ItemsSource="{Binding OldLines}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type models:DiffLine}">
                                            <Grid MinHeight="18">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.ColumnSpan="2" Background="{Binding Kind, Converter={StaticResource ChangeTypeToBrushConverter}}"/>
                                                <TextBlock Text="{Binding LineNumber}"
                                                           Foreground="{StaticResource LineNumberForeground}"
                                                           TextAlignment="Right"
                                                           Padding="0,0,10,0" />
                                                <ContentPresenter Grid.Column="1"
                                                                  Content="{Binding}"
                                                                  ContentTemplate="{StaticResource LineContentTemplate}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Gutter with Merge Actions -->
                                <Border Grid.Column="1" BorderBrush="#e1e4e8" BorderThickness="1,0">
                                    <StackPanel VerticalAlignment="Center" 
                                                Visibility="{Binding IsMergeable, Converter={StaticResource BooleanToVisibilityConverter}}">

                                        <!-- Copy Left to Right (>>) -->
                                        <Button Content=">>" 
                                                ToolTip="Merge Left to Right"
                                                Padding="2"
                                                Margin="2"
                                                FontSize="10"
                                                FontWeight="Bold"
                                                Command="{Binding DataContext.MergeBlockCommand, RelativeSource={RelativeSource AncestorType=Window}}">
                                            <Button.CommandParameter>
                                                <MultiBinding Converter="{StaticResource MergeParamsConverter}">
                                                    <Binding />
                                                    <!-- The DiffHunk -->
                                                    <Binding Source="{x:Static models:MergeDirection.LeftToRight}" />
                                                </MultiBinding>
                                            </Button.CommandParameter>
                                        </Button>

                                        <!-- Copy Right to Left (<<) -->
                                        <Button Content="&lt;&lt;" 
                                                ToolTip="Merge Right to Left"
                                                Padding="2"
                                                Margin="2"
                                                FontSize="10"
                                                FontWeight="Bold"
                                                Command="{Binding DataContext.MergeBlockCommand, RelativeSource={RelativeSource AncestorType=Window}}">
                                            <Button.CommandParameter>
                                                <MultiBinding Converter="{StaticResource MergeParamsConverter}">
                                                    <Binding />
                                                    <!-- The DiffHunk -->
                                                    <Binding Source="{x:Static models:MergeDirection.RightToLeft}" />
                                                </MultiBinding>
                                            </Button.CommandParameter>
                                        </Button>
                                    </StackPanel>
                                </Border>

                                <!-- Right Side (New) -->
                                <ItemsControl Grid.Column="2" ItemsSource="{Binding NewLines}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type models:DiffLine}">
                                            <Grid MinHeight="18">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.ColumnSpan="2" Background="{Binding Kind, Converter={StaticResource ChangeTypeToBrushConverter}}"/>
                                                <TextBlock Text="{Binding LineNumber}"
                                                           Foreground="{StaticResource LineNumberForeground}"
                                                           TextAlignment="Right"
                                                           Padding="0,0,10,0" />
                                                <ContentPresenter Grid.Column="1"
                                                                  Content="{Binding}"
                                                                  ContentTemplate="{StaticResource LineContentTemplate}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </DataTemplate>

        <DataTemplate x:Key="UnifiedTemplate">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding UnifiedLines}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:DiffLine}">
                            <Grid MinHeight="18">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Border Grid.ColumnSpan="3" Background="{Binding Kind, Converter={StaticResource ChangeTypeToBrushConverter}}"/>

                                <TextBlock Text="{Binding LineNumber}"
                                           Foreground="{StaticResource LineNumberForeground}"
                                           TextAlignment="Right"
                                           Padding="0,0,10,0" />

                                <TextBlock Grid.Column="1" Foreground="{StaticResource LineNumberForeground}" Padding="5,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value=" "/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Kind}" Value="Inserted">
                                                    <Setter Property="Text" Value="+"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Kind}" Value="Deleted">
                                                    <Setter Property="Text" Value="-"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <ContentPresenter Grid.Column="2"
                                                  Content="{Binding}"
                                                  ContentTemplate="{StaticResource LineContentTemplate}"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </DataTemplate>
    </UserControl.Resources>

    <ContentControl Content="{Binding}">
        <ContentControl.Style>
            <Style TargetType="ContentControl">
                <Setter Property="ContentTemplate" Value="{StaticResource SideBySideTemplate}" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding DataContext.IsUnifiedMode, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                        <Setter Property="ContentTemplate" Value="{StaticResource UnifiedTemplate}" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ContentControl.Style>
    </ContentControl>
</UserControl>