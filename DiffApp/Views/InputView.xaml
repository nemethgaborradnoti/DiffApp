<UserControl x:Class="DiffApp.Views.InputView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:DiffApp.Converters"
             xmlns:fonts="clr-namespace:Fonts"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="1000"
             Background="{StaticResource BrushBackground}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="{x:Static fonts:MaterialIcons.description}"
                           Style="{StaticResource IconStyle}"
                           Foreground="{StaticResource GrayTextBrush}"
                           FontSize="16"
                           Margin="0,0,8,0"/>
                <TextBlock Text="{DynamicResource InputView_OriginalText}"
                           Style="{StaticResource HeaderTextStyle}"
                           FontSize="14"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="{x:Static fonts:MaterialIcons.description}"
                           Style="{StaticResource IconStyle}"
                           Foreground="{StaticResource GrayTextBrush}"
                           FontSize="16"
                           Margin="0,0,8,0"/>
                <TextBlock Text="{DynamicResource InputView_ChangedText}"
                           Style="{StaticResource HeaderTextStyle}"
                           FontSize="14"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0"
                     Text="{Binding LeftText, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource ModernTextBoxStyle}"
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     TextWrapping="{Binding IsWordWrapEnabled, Converter={x:Static converters:BoolToTextWrappingConverter.Instance}}"
                     FontFamily="{StaticResource CodeFont}"
                     FontSize="{Binding FontSize}"
                     VerticalContentAlignment="Top"
                     Padding="8"
                     VerticalAlignment="Stretch"/>

            <TextBox Grid.Column="2"
                     Text="{Binding RightText, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource ModernTextBoxStyle}"
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     TextWrapping="{Binding IsWordWrapEnabled, Converter={x:Static converters:BoolToTextWrappingConverter.Instance}}"
                     FontFamily="{StaticResource CodeFont}"
                     FontSize="{Binding FontSize}"
                     VerticalContentAlignment="Top"
                     Padding="8"
                     VerticalAlignment="Stretch"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Command="{Binding FindDifferenceCommand}"
                    Style="{StaticResource PrimaryButton}"
                    Padding="25,10"
                    FontSize="14">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{x:Static fonts:MaterialIcons.search}"
                               Style="{StaticResource IconStyle}"
                               Foreground="White"
                               FontSize="18"
                               Margin="0,0,8,0"/>
                    <TextBlock Text="{DynamicResource InputView_FindDifference}" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>