<UserControl x:Class="DiffApp.Views.InputView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:DiffApp.Converters"
             xmlns:models="clr-namespace:DiffApp.Models"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:EnumMatchToBooleanConverter x:Key="EnumMatchToBooleanConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0"
                     Text="{Binding LeftText, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     TextWrapping="{Binding IsWordWrapEnabled, Converter={x:Static converters:BoolToTextWrappingConverter.Instance}}"
                     Margin="0,5,0,0"
                     FontFamily="Consolas"
                     Padding="5"/>

            <Button Grid.Column="1"
                    Content="&#x21C4;"
                    Command="{Binding SwapTextsCommand}"
                    ToolTip="Swap Sides"
                    Margin="5,5,5,0"
                    VerticalAlignment="Top"
                    FontWeight="Bold"
                    FontSize="16"/>

            <TextBox Grid.Column="2"
                     Text="{Binding RightText, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     TextWrapping="{Binding IsWordWrapEnabled, Converter={x:Static converters:BoolToTextWrappingConverter.Instance}}"
                     Margin="0,5,0,0"
                     FontFamily="Consolas"
                     Padding="5"/>
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,10">
            <Button Content="Find Difference" Command="{Binding FindDifferenceCommand}" Padding="20,10" FontWeight="Bold"/>

            <GroupBox Header="Settings" Margin="20,0,0,0" Padding="10,5">
                <StackPanel Orientation="Horizontal">
                    <CheckBox Content="Ignore Whitespace" IsChecked="{Binding IgnoreWhitespace}" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <CheckBox Content="Word Wrap" IsChecked="{Binding IsWordWrapEnabled}" VerticalAlignment="Center" Margin="0,0,15,0"/>

                    <Label Content="Precision:" VerticalAlignment="Center"/>
                    <RadioButton Content="Word" IsChecked="{Binding Precision, Converter={StaticResource EnumMatchToBooleanConverter}, ConverterParameter={x:Static models:PrecisionLevel.Word}}"
                                 GroupName="PrecisionGroup" VerticalAlignment="Center" Margin="5,0"/>
                    <RadioButton Content="Character" IsChecked="{Binding Precision, Converter={StaticResource EnumMatchToBooleanConverter}, ConverterParameter={x:Static models:PrecisionLevel.Character}}"
                                 GroupName="PrecisionGroup" VerticalAlignment="Center" Margin="5,0"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</UserControl>