<UserControl x:Class="DiffApp.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:DiffApp.ViewModels"
             xmlns:models="clr-namespace:DiffApp.Models"
             xmlns:fonts="clr-namespace:Fonts"
             xmlns:converters="clr-namespace:DiffApp.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="300">

	<StackPanel>
		<TextBlock Text="Comparison" Style="{StaticResource SectionHeaderStyle}" Margin="0,10,0,10"/>
		<CheckBox Content="Ignore Whitespace"
                  IsChecked="{Binding IgnoreWhitespace}"
                  Style="{StaticResource ToggleSwitchStyle}"
                  Margin="0,0,0,10"/>

		<Grid Margin="0,0,0,20">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<RadioButton Grid.Column="0" Content="Word"
                         IsChecked="{Binding Precision, Converter={StaticResource EnumMatchToBooleanConverter}, ConverterParameter={x:Static models:PrecisionLevel.Word}}"
                         GroupName="PrecisionGroup"
                         Style="{StaticResource SegmentedRadioLeftStyle}"/>
			<RadioButton Grid.Column="1" Content="Char"
                         IsChecked="{Binding Precision, Converter={StaticResource EnumMatchToBooleanConverter}, ConverterParameter={x:Static models:PrecisionLevel.Character}}"
                         GroupName="PrecisionGroup"
                         Style="{StaticResource SegmentedRadioRightStyle}"/>
		</Grid>

		<TextBlock Text="Appearance" Style="{StaticResource SectionHeaderStyle}"/>

		<CheckBox Content="Word Wrap"
                  IsChecked="{Binding IsWordWrapEnabled}"
                  Style="{StaticResource ToggleSwitchStyle}"
                  Margin="0,0,0,15"/>

		<TextBlock Text="Font Size" Foreground="{StaticResource GrayTextBrush}" Margin="0,0,0,5"/>
		<DockPanel Margin="0,0,0,20">
			<TextBlock Text="{Binding ElementName=FontSlider, Path=Value, StringFormat={}{0:0}}"
                       DockPanel.Dock="Right"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"
                       Width="20"
                       TextAlignment="Right"
                       Foreground="{StaticResource TextBrush}"/>
			<Slider x:Name="FontSlider"
                    Minimum="10"
                    Maximum="24"
                    TickFrequency="1"
                    IsSnapToTickEnabled="True"
                    Value="{Binding FontSize}"/>
		</DockPanel>

		<TextBlock Text="Layout" Style="{StaticResource SectionHeaderStyle}"/>
		<Grid Margin="0,0,0,20">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<RadioButton Grid.Column="0" Content="Split"
                         IsChecked="{Binding ViewMode, Converter={StaticResource EnumMatchToBooleanConverter}, ConverterParameter={x:Static models:ViewMode.Split}}"
                         GroupName="ViewModeGroup"
                         Style="{StaticResource SegmentedRadioLeftStyle}"/>
			<RadioButton Grid.Column="1" Content="Unified"
                         IsChecked="{Binding ViewMode, Converter={StaticResource EnumMatchToBooleanConverter}, ConverterParameter={x:Static models:ViewMode.Unified}}"
                         GroupName="ViewModeGroup"
                         Style="{StaticResource SegmentedRadioRightStyle}"/>
		</Grid>

		<TextBlock Text="View" Style="{StaticResource SectionHeaderStyle}"/>
		<Button Content="Reset window"
                Command="{Binding ResetWindowCommand}"
                Style="{StaticResource SecondaryButton}"
                Margin="0,0,0,20"/>

		<Separator Background="{StaticResource BrushBorder}" Margin="0,20,0,10"/>

		<TextBlock Text="{Binding AppVersion, StringFormat='Version {0}'}"
                   HorizontalAlignment="Center"
                   Foreground="{StaticResource GrayTextBrush}"
                   FontSize="12"
                   Margin="0,0,0,10"/>

		<Button Content="Reset to defaults"
                 Command="{Binding ResetDefaultsCommand}"
                 Style="{StaticResource DangerButton}"/>
	</StackPanel>
</UserControl>