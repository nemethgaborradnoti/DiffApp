<UserControl x:Class="DiffApp.Views.Controls.DiffMinimap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:DiffApp.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="24"
             Background="Transparent">

    <UserControl.Resources>
        <converters:RelativeSizeConverter x:Key="RelativeSizeConverter"/>
        <converters:MinimapBrushConverter x:Key="MinimapBrushConverter"/>
    </UserControl.Resources>

    <Border Background="{Binding TrackColor, RelativeSource={RelativeSource AncestorType=UserControl}}"
            BorderBrush="{StaticResource BrushBorder}"
            BorderThickness="1,0,1,0"
            Width="24">
        <ItemsControl ItemsSource="{Binding ItemsSource, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas IsItemsHost="True" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemContainerStyle>
                <Style TargetType="ContentPresenter">
                    <Setter Property="Canvas.Top">
                        <Setter.Value>
                            <MultiBinding Converter="{StaticResource RelativeSizeConverter}">
                                <Binding Path="OffsetPercentage" />
                                <Binding RelativeSource="{RelativeSource AncestorType=UserControl}" Path="ActualHeight" />
                            </MultiBinding>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Width" Value="22"/>
                </Style>
            </ItemsControl.ItemContainerStyle>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <!-- Container Grid for Split View -->
                    <Grid SnapsToDevicePixels="True"
                          Cursor="Hand"
                          IsHitTestVisible="True">
                        <Grid.InputBindings>
                            <MouseBinding MouseAction="LeftClick"
                                          Command="{Binding ItemClickCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                          CommandParameter="{Binding}"/>
                        </Grid.InputBindings>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.Height>
                            <MultiBinding Converter="{StaticResource RelativeSizeConverter}">
                                <Binding Path="HeightPercentage" />
                                <Binding RelativeSource="{RelativeSource AncestorType=UserControl}" Path="ActualHeight" />
                            </MultiBinding>
                        </Grid.Height>
                        
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Opacity" Value="1.0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.8"/>
                                    </Trigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding Path=IgnoreWhitespace, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True" />
                                            <Condition Binding="{Binding Block.IsWhitespaceChange}" Value="True" />
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Cursor" Value="Arrow"/>
                                        <Setter Property="IsHitTestVisible" Value="False"/>
                                        <Setter Property="ToolTip" Value="{x:Null}"/>
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <Grid.ToolTip>
                            <ToolTip>
                                <StackPanel>
                                    <TextBlock Text="Change Block" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding TargetLineIndex, StringFormat='Start Line: {0}'}"/>
                                    <TextBlock Text="Click to scroll" FontSize="10" FontStyle="Italic" Foreground="Gray"/>
                                </StackPanel>
                            </ToolTip>
                        </Grid.ToolTip>

                        <!-- Left Side (Original) -->
                        <Rectangle Grid.Column="0">
                            <Rectangle.Fill>
                                <MultiBinding Converter="{StaticResource MinimapBrushConverter}" ConverterParameter="Left">
                                    <Binding />
                                    <Binding Path="IgnoreWhitespace" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                </MultiBinding>
                            </Rectangle.Fill>
                        </Rectangle>

                        <!-- Right Side (Modified) -->
                        <Rectangle Grid.Column="1">
                            <Rectangle.Fill>
                                <MultiBinding Converter="{StaticResource MinimapBrushConverter}" ConverterParameter="Right">
                                    <Binding />
                                    <Binding Path="IgnoreWhitespace" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                </MultiBinding>
                            </Rectangle.Fill>
                        </Rectangle>

                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Border>
</UserControl>