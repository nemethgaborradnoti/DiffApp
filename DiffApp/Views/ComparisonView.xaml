<UserControl x:Class="DiffApp.Views.ComparisonView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:models="clr-namespace:DiffApp.Models"
             xmlns:converters="clr-namespace:DiffApp.Converters"
             xmlns:helpers="clr-namespace:DiffApp.Helpers"
             xmlns:fonts="clr-namespace:Fonts"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="800"
             Background="{StaticResource BrushBackground}">
    <UserControl.Resources>
        <converters:ChangeTypeToBrushConverter x:Key="ChangeTypeToBrushConverter" />
        <converters:MergeParamsConverter x:Key="MergeParamsConverter" />
        <converters:BoolToTextWrappingConverter x:Key="BoolToTextWrappingConverter" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <DataTemplate x:Key="LineContentTemplate">
            <TextBlock helpers:TextBlockFormatter.Fragments="{Binding Fragments}"
                       helpers:TextBlockFormatter.Precision="{Binding DataContext.InputViewModel.Precision, RelativeSource={RelativeSource AncestorType=Window}}"
                       helpers:TextBlockFormatter.AreHighlightsEnabled="{Binding IsInModifiedBlock}"
                       TextWrapping="{Binding DataContext.InputViewModel.IsWordWrapEnabled, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToTextWrappingConverter}, FallbackValue=NoWrap}"
                       FontFamily="Consolas" />
        </DataTemplate>

        <DataTemplate x:Key="SideBySideTemplate">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="{StaticResource BrushSurface}" BorderBrush="{StaticResource BrushBorder}" BorderThickness="0,0,0,1" Padding="10,5" Margin="0,0,2,0">
                        <Grid>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Original" FontWeight="Bold" Foreground="{StaticResource GrayTextBrush}" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding LeftLineCount, StringFormat='({0} lines)'}" Foreground="{StaticResource GrayTextBrush}" FontSize="12" VerticalAlignment="Center"/>
                            </StackPanel>

                            <Button Style="{StaticResource IconButtonStyle}" HorizontalAlignment="Right"
                                    ToolTip="Copy Original Text"
                                    Command="{Binding DataContext.CopyTextCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{x:Static models:Side.Old}">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="{x:Static fonts:MaterialIcons.content_copy}" Style="{StaticResource IconStyle}" FontSize="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Copy" FontWeight="SemiBold" VerticalAlignment="Center" FontSize="14"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>

                    <Border Grid.Column="1" Background="{StaticResource BrushSurface}" BorderBrush="{StaticResource BrushBorder}" BorderThickness="0,0,0,1" Padding="5,0">
                        <Button Style="{StaticResource IconButtonStyle}"
                                Command="{Binding DataContext.SwapAllCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                ToolTip="Swap Sides"
                                MinHeight="40"
                                MinWidth="40">
                            <TextBlock Text="{x:Static fonts:MaterialIcons.swap_horiz}" Style="{StaticResource IconStyle}" FontSize="24"/>
                        </Button>
                    </Border>

                    <Border Grid.Column="2" Background="{StaticResource BrushSurface}" BorderBrush="{StaticResource BrushBorder}" BorderThickness="0,0,0,1" Padding="10,5" Margin="2,0,0,0">
                        <Grid>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Modified" FontWeight="Bold" Foreground="{StaticResource GrayTextBrush}" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding RightLineCount, StringFormat='({0} lines)'}" Foreground="{StaticResource GrayTextBrush}" FontSize="12" VerticalAlignment="Center"/>
                            </StackPanel>

                            <Button Style="{StaticResource IconButtonStyle}" HorizontalAlignment="Right"
                                    ToolTip="Copy Modified Text"
                                    Command="{Binding DataContext.CopyTextCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{x:Static models:Side.New}">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="{x:Static fonts:MaterialIcons.content_copy}" Style="{StaticResource IconStyle}" FontSize="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Copy" FontWeight="SemiBold" VerticalAlignment="Center" FontSize="14"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>

                <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding ComparisonResult.Blocks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:ChangeBlock}">

                                <Border Margin="0,1"
                                        Padding="0"
                                        CornerRadius="4"
                                        BorderThickness="2">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Setter Property="Background" Value="Transparent"/>

                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMergeable}" Value="True">
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                </DataTrigger>

                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                                                        <Condition Binding="{Binding IsMergeable}" Value="True"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="BorderBrush" Value="{StaticResource BrushSelectionBorder}"/>
                                                    <Setter Property="Background" Value="#F8F8F8"/>
                                                </MultiDataTrigger>

                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                    <Setter Property="BorderBrush" Value="{StaticResource BrushSelectionBorder}"/>
                                                    <Setter Property="Background" Value="{StaticResource BrushBackground}"/>
                                                    <Setter Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" BlurRadius="5" Opacity="0.2"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="Panel.ZIndex" Value="10"/>
                                                    <Setter Property="Margin" Value="0,4"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick"
                                                      Command="{Binding DataContext.SelectBlockCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      CommandParameter="{Binding}"/>
                                    </Border.InputBindings>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <ItemsControl Grid.Column="0" ItemsSource="{Binding OldLines}" Margin="0,0,2,0">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate DataType="{x:Type models:ChangeLine}">
                                                        <Grid MinHeight="20">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="40" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>
                                                            <Border Grid.ColumnSpan="2" Background="{Binding Kind, Converter={StaticResource ChangeTypeToBrushConverter}}"/>
                                                            <TextBlock Text="{Binding LineNumber}"
                                                                       Foreground="{StaticResource BrushLineNumber}"
                                                                       Background="#F6F8FA"
                                                                       TextAlignment="Right"
                                                                       Padding="0,2,8,2"
                                                                       FontSize="11"
                                                                       FontFamily="Consolas"/>
                                                            <ContentPresenter Grid.Column="1"
                                                                              Content="{Binding}"
                                                                              ContentTemplate="{StaticResource LineContentTemplate}"
                                                                              Margin="5,0,0,0"
                                                                              VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <ItemsControl Grid.Column="1" ItemsSource="{Binding NewLines}" Margin="2,0,0,0">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate DataType="{x:Type models:ChangeLine}">
                                                        <Grid MinHeight="20">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="40" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>
                                                            <Border Grid.ColumnSpan="2" Background="{Binding Kind, Converter={StaticResource ChangeTypeToBrushConverter}}"/>
                                                            <TextBlock Text="{Binding LineNumber}"
                                                                       Foreground="{StaticResource BrushLineNumber}"
                                                                       Background="#F6F8FA"
                                                                       TextAlignment="Right"
                                                                       Padding="0,2,8,2"
                                                                       FontSize="11"
                                                                       FontFamily="Consolas"/>
                                                            <ContentPresenter Grid.Column="1"
                                                                              Content="{Binding}"
                                                                              ContentTemplate="{StaticResource LineContentTemplate}"
                                                                              Margin="5,0,0,0"
                                                                              VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Grid>

                                        <Border Grid.Row="1"
                                                Background="#F1F8FF"
                                                BorderBrush="{StaticResource BrushBorder}"
                                                BorderThickness="0,1,0,0"
                                                Visibility="{Binding IsSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <Grid Margin="10,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <Button Grid.Column="0"
                                                        Style="{StaticResource DangerButton}"
                                                        Command="{Binding DataContext.MergeBlockCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        HorizontalAlignment="Center">
                                                    <Button.CommandParameter>
                                                        <MultiBinding Converter="{StaticResource MergeParamsConverter}">
                                                            <Binding />
                                                            <Binding Source="{x:Static models:MergeDirection.LeftToRight}" />
                                                        </MultiBinding>
                                                    </Button.CommandParameter>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="Merge" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="White"/>
                                                        <TextBlock Text="{x:Static fonts:MaterialIcons.east}" Style="{StaticResource IconStyle}" FontSize="18" Foreground="White"/>
                                                    </StackPanel>
                                                </Button>

                                                <Button Grid.Column="1"
                                                        Style="{StaticResource IconButtonStyle}"
                                                        ToolTip="Close Selection"
                                                        Command="{Binding DataContext.DeselectAllCommand, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                                    <TextBlock Text="{x:Static fonts:MaterialIcons.close}" Style="{StaticResource IconStyle}" FontSize="20"/>
                                                </Button>

                                                <Button Grid.Column="2"
                                                        Style="{StaticResource SuccessButton}"
                                                        Command="{Binding DataContext.MergeBlockCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        HorizontalAlignment="Center">
                                                    <Button.CommandParameter>
                                                        <MultiBinding Converter="{StaticResource MergeParamsConverter}">
                                                            <Binding />
                                                            <Binding Source="{x:Static models:MergeDirection.RightToLeft}" />
                                                        </MultiBinding>
                                                    </Button.CommandParameter>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{x:Static fonts:MaterialIcons.west}" Style="{StaticResource IconStyle}" FontSize="18" Margin="0,0,8,0" Foreground="White"/>
                                                        <TextBlock Text="Merge" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="White"/>
                                                    </StackPanel>
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="UnifiedTemplate">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="{StaticResource BrushSurface}" BorderBrush="{StaticResource BrushBorder}" BorderThickness="0,0,1,1" Padding="10,5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Original" FontWeight="Bold" Foreground="{StaticResource GrayTextBrush}" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding LeftLineCount, StringFormat='({0} lines)'}" Foreground="{StaticResource GrayTextBrush}" FontSize="12" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="1" Background="{StaticResource BrushSurface}" BorderBrush="{StaticResource BrushBorder}" BorderThickness="0,0,0,1" Padding="10,5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Modified" FontWeight="Bold" Foreground="{StaticResource GrayTextBrush}" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding RightLineCount, StringFormat='({0} lines)'}" Foreground="{StaticResource GrayTextBrush}" FontSize="12" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding UnifiedLines}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:ChangeLine}">
                                <Grid MinHeight="20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40" />
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.ColumnSpan="3" Background="{Binding Kind, Converter={StaticResource ChangeTypeToBrushConverter}}"/>

                                    <TextBlock Text="{Binding LineNumber}"
                                               Foreground="{StaticResource BrushLineNumber}"
                                               Background="#F6F8FA"
                                               TextAlignment="Right"
                                               Padding="0,2,8,2"
                                               FontSize="11"
                                               FontFamily="Consolas" />

                                    <TextBlock Grid.Column="1" Foreground="{StaticResource BrushLineNumber}" Padding="5,0"
                                               HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value=" "/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Kind}" Value="Inserted">
                                                        <Setter Property="Text" Value="+"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Kind}" Value="Deleted">
                                                        <Setter Property="Text" Value="-"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <ContentPresenter Grid.Column="2"
                                                      Content="{Binding}"
                                                      ContentTemplate="{StaticResource LineContentTemplate}"
                                                      Margin="5,0,0,0"
                                                      VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ContentControl Grid.Row="0" Content="{Binding}">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Setter Property="ContentTemplate" Value="{StaticResource SideBySideTemplate}" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsUnifiedMode}" Value="True">
                            <Setter Property="ContentTemplate" Value="{StaticResource UnifiedTemplate}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>
    </Grid>
</UserControl>