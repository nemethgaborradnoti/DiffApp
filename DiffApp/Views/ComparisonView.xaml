<UserControl x:Class="DiffApp.Views.ComparisonView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:models="clr-namespace:DiffApp.Models"
             xmlns:converters="clr-namespace:DiffApp.Converters"
             xmlns:helpers="clr-namespace:DiffApp.Helpers"
             xmlns:fonts="clr-namespace:Fonts"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="800"
             Background="{StaticResource BrushBackground}">
    <UserControl.Resources>
        <converters:ChangeTypeToBrushConverter x:Key="ChangeTypeToBrushConverter" />
        <converters:MergeParamsConverter x:Key="MergeParamsConverter" />
        <converters:BoolToTextWrappingConverter x:Key="BoolToTextWrappingConverter" />

        <DataTemplate x:Key="LineContentTemplate">
            <TextBlock helpers:TextBlockFormatter.Fragments="{Binding Fragments}"
                       helpers:TextBlockFormatter.Precision="{Binding DataContext.InputViewModel.Precision, RelativeSource={RelativeSource AncestorType=Window}}"
                       helpers:TextBlockFormatter.AreHighlightsEnabled="{Binding IsInModifiedBlock}"
                       TextWrapping="{Binding DataContext.InputViewModel.IsWordWrapEnabled, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToTextWrappingConverter}, FallbackValue=NoWrap}"
                       FontFamily="Consolas" />
        </DataTemplate>

        <DataTemplate x:Key="SideBySideTemplate">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Header Row -->
                <Grid Grid.Row="0" Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="{StaticResource BrushSurface}" BorderBrush="{StaticResource BrushBorder}" BorderThickness="0,0,0,1" Padding="10,5">
                        <Grid>
                            <TextBlock Text="Original" FontWeight="Bold" VerticalAlignment="Center" Foreground="#586069"/>
                            <Button Style="{StaticResource IconButtonStyle}" HorizontalAlignment="Right"
                                    ToolTip="Copy Original Text"
                                    Padding="15,8"
                                    MinWidth="100"
                                    Command="{Binding DataContext.CopyTextCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{x:Static models:Side.Old}">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="{x:Static fonts:MaterialIcons.content_copy}" Style="{StaticResource IconStyle}" FontSize="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Copy" FontWeight="SemiBold" VerticalAlignment="Center" FontSize="14"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Swap Button in Header -->
                    <Border Grid.Column="1" Background="{StaticResource BrushSurface}" BorderBrush="{StaticResource BrushBorder}" BorderThickness="0,0,0,1">
                        <Button Style="{StaticResource IconButtonStyle}"
                                Command="{Binding DataContext.SwapAllCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                ToolTip="Swap Sides"
                                Padding="8"
                                MinHeight="40"
                                MinWidth="40"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                            <TextBlock Text="{x:Static fonts:MaterialIcons.swap_horiz}" Style="{StaticResource IconStyle}" FontSize="24"/>
                        </Button>
                    </Border>

                    <Border Grid.Column="2" Background="{StaticResource BrushSurface}" BorderBrush="{StaticResource BrushBorder}" BorderThickness="0,0,0,1" Padding="10,5">
                        <Grid>
                            <TextBlock Text="Modified" FontWeight="Bold" VerticalAlignment="Center" Foreground="#586069"/>
                            <Button Style="{StaticResource IconButtonStyle}" HorizontalAlignment="Right"
                                    ToolTip="Copy Modified Text"
                                    Padding="15,8"
                                    MinWidth="100"
                                    Command="{Binding DataContext.CopyTextCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{x:Static models:Side.New}">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="{x:Static fonts:MaterialIcons.content_copy}" Style="{StaticResource IconStyle}" FontSize="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Copy" FontWeight="SemiBold" VerticalAlignment="Center" FontSize="14"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>

                <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding ComparisonResult.Blocks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:ChangeBlock}">
                                <Grid>
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Background" Value="Transparent" />
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F8F8F8" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Left Side (Original) -->
                                    <ItemsControl Grid.Column="0" ItemsSource="{Binding OldLines}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type models:ChangeLine}">
                                                <Grid MinHeight="20">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="40" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.ColumnSpan="2" Background="{Binding Kind, Converter={StaticResource ChangeTypeToBrushConverter}}"/>
                                                    <!-- Line Number -->
                                                    <TextBlock Text="{Binding LineNumber}"
                                                               Foreground="{StaticResource BrushLineNumber}"
                                                               Background="#F6F8FA"
                                                               TextAlignment="Right"
                                                               Padding="0,2,8,2"
                                                               FontSize="11"
                                                               FontFamily="Consolas"/>
                                                    <!-- Content -->
                                                    <ContentPresenter Grid.Column="1"
                                                                      Content="{Binding}"
                                                                      ContentTemplate="{StaticResource LineContentTemplate}"
                                                                      Margin="5,0,0,0"
                                                                      VerticalAlignment="Center"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Middle Action Bar -->
                                    <Border Grid.Column="1" BorderBrush="{StaticResource BrushBorder}" BorderThickness="1,0" Background="#FAFBFC">
                                        <StackPanel VerticalAlignment="Center"
                                                    Visibility="{Binding IsMergeable, Converter={StaticResource BoolToVisibilityConverter}}">

                                            <Button Style="{StaticResource IconButtonStyle}"
                                                    ToolTip="Merge Left to Right"
                                                    Margin="0,2"
                                                    Padding="8,5"
                                                    Command="{Binding DataContext.MergeBlockCommand, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                                <Button.CommandParameter>
                                                    <MultiBinding Converter="{StaticResource MergeParamsConverter}">
                                                        <Binding />
                                                        <Binding Source="{x:Static models:MergeDirection.LeftToRight}" />
                                                    </MultiBinding>
                                                </Button.CommandParameter>
                                                <TextBlock Text="{x:Static fonts:MaterialIcons.east}" Style="{StaticResource IconStyle}" FontSize="16"/>
                                            </Button>

                                            <Button Style="{StaticResource IconButtonStyle}"
                                                    ToolTip="Merge Right to Left"
                                                    Margin="0,2"
                                                    Padding="8,5"
                                                    Command="{Binding DataContext.MergeBlockCommand, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                                <Button.CommandParameter>
                                                    <MultiBinding Converter="{StaticResource MergeParamsConverter}">
                                                        <Binding />
                                                        <Binding Source="{x:Static models:MergeDirection.RightToLeft}" />
                                                    </MultiBinding>
                                                </Button.CommandParameter>
                                                <TextBlock Text="{x:Static fonts:MaterialIcons.west}" Style="{StaticResource IconStyle}" FontSize="16"/>
                                            </Button>
                                        </StackPanel>
                                    </Border>

                                    <!-- Right Side (Modified) -->
                                    <ItemsControl Grid.Column="2" ItemsSource="{Binding NewLines}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type models:ChangeLine}">
                                                <Grid MinHeight="20">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="40" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.ColumnSpan="2" Background="{Binding Kind, Converter={StaticResource ChangeTypeToBrushConverter}}"/>
                                                    <!-- Line Number -->
                                                    <TextBlock Text="{Binding LineNumber}"
                                                               Foreground="{StaticResource BrushLineNumber}"
                                                               Background="#F6F8FA"
                                                               TextAlignment="Right"
                                                               Padding="0,2,8,2"
                                                               FontSize="11"
                                                               FontFamily="Consolas"/>
                                                    <!-- Content -->
                                                    <ContentPresenter Grid.Column="1"
                                                                      Content="{Binding}"
                                                                      ContentTemplate="{StaticResource LineContentTemplate}"
                                                                      Margin="5,0,0,0"
                                                                      VerticalAlignment="Center"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="UnifiedTemplate">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="{StaticResource BrushSurface}" BorderBrush="{StaticResource BrushBorder}" BorderThickness="0,0,1,1" Padding="10,5">
                        <TextBlock Text="Original" FontWeight="Bold" Foreground="#586069"/>
                    </Border>
                    <Border Grid.Column="1" Background="{StaticResource BrushSurface}" BorderBrush="{StaticResource BrushBorder}" BorderThickness="0,0,0,1" Padding="10,5">
                        <TextBlock Text="Modified" FontWeight="Bold" Foreground="#586069"/>
                    </Border>
                </Grid>

                <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding UnifiedLines}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:ChangeLine}">
                                <Grid MinHeight="20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40" />
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.ColumnSpan="3" Background="{Binding Kind, Converter={StaticResource ChangeTypeToBrushConverter}}"/>

                                    <TextBlock Text="{Binding LineNumber}"
                                               Foreground="{StaticResource BrushLineNumber}"
                                               Background="#F6F8FA"
                                               TextAlignment="Right"
                                               Padding="0,2,8,2"
                                               FontSize="11"
                                               FontFamily="Consolas" />

                                    <TextBlock Grid.Column="1" Foreground="{StaticResource BrushLineNumber}" Padding="5,0"
                                               HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value=" "/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Kind}" Value="Inserted">
                                                        <Setter Property="Text" Value="+"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Kind}" Value="Deleted">
                                                        <Setter Property="Text" Value="-"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <ContentPresenter Grid.Column="2"
                                                      Content="{Binding}"
                                                      ContentTemplate="{StaticResource LineContentTemplate}"
                                                      Margin="5,0,0,0"
                                                      VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ContentControl Grid.Row="0" Content="{Binding}">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Setter Property="ContentTemplate" Value="{StaticResource SideBySideTemplate}" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsUnifiedMode}" Value="True">
                            <Setter Property="ContentTemplate" Value="{StaticResource UnifiedTemplate}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>
    </Grid>
</UserControl>